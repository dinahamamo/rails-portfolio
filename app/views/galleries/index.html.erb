<h1>Gallery</h1>

<%= link_to "Add a project", new_gallery_path %>
<% @gallery_items.each do |project| %>
  <p><%= project.title %></p>
  <p><%= project.subtitle %></p>
  <p><%= project.body %></p>
  <%= image_tag project.thumb_image unless project.thumb_image.nil? %>
  <%= link_to "Edit",  edit_gallery_path(project.id) %>
<% end %>
